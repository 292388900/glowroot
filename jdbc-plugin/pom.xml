<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <groupId>org.informantproject.plugin</groupId>
  <artifactId>jdbc-plugin</artifactId>
  <version>0.5-SNAPSHOT</version>

  <name>Informant Jdbc Plugin</name>
  <description>Informant Jdbc Plugin</description>
  <url>http://www.informantproject.org</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:https://github.com/informantproject/jdbc-plugin.git</connection>
    <developerConnection>
      scm:git:git@github.com:informantproject/jdbc-plugin.git
    </developerConnection>
    <url>https://github.com/informantproject/jdbc-plugin</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.informantproject</groupId>
      <artifactId>informant-plugin-api</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.informantproject.shaded</groupId>
      <artifactId>shaded-aspectjrt</artifactId>
      <version>1.6.11-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <!--
        using shaded-guava dependency to take advantage of
        the guava library already included in the Informant jar
      -->
      <groupId>org.informantproject.shaded</groupId>
      <artifactId>shaded-guava</artifactId>
      <version>11.0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.informantproject</groupId>
      <artifactId>informant-plugin-testkit</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.3.164</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <!--
        TODO use p6spy to run tests against a proxied jdbc connections
        which are common in application server environments
      -->
      <groupId>p6spy</groupId>
      <artifactId>p6spy</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.2</version>
          <configuration>
            <source>1.5</source>
            <target>1.5</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
