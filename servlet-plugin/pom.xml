<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <groupId>org.informantproject.plugin</groupId>
  <artifactId>servlet-plugin</artifactId>
  <version>0.5-SNAPSHOT</version>

  <name>Informant Servlet Plugin</name>
  <description>Informant Servlet Plugin</description>
  <url>http://www.informantproject.org</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:https://github.com/informantproject/servlet-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:informantproject/servlet-plugin.git</developerConnection>
    <url>https://github.com/informantproject/servlet-plugin</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.informantproject</groupId>
      <artifactId>informant-plugin-api</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.informantproject.shaded</groupId>
      <artifactId>shaded-aspectjrt</artifactId>
      <version>1.6.11-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <!--
        using shaded-guava dependency to take advantage of
        the guava library already included in the Informant jar
      -->
      <groupId>org.informantproject.shaded</groupId>
      <artifactId>shaded-guava</artifactId>
      <version>10.0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-servlet_3.0_spec</artifactId>
      <version>1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.informantproject</groupId>
      <artifactId>informant-plugin-testkit</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <!-- TODO replace spring mock servlet objects with embedded jetty -->
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <version>3.0.6.RELEASE</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <!--
        optional dependency of spring-test that is required by
        org.springframework.mock.web.MockHttpServletRequest
      -->
      <groupId>org.springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>3.0.6.RELEASE</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.2</version>
          <configuration>
            <source>1.5</source>
            <target>1.5</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
