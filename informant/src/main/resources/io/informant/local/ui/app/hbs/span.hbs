{{#if limitExceededMarker}}
  <div class="indent1" style="padding: 10px 0;">
    <strong>... Span limit exceeded ...</strong>
  </div>
{{^}}
  {{#if limitExtendedMarker}}
    <div class="indent1" style="padding: 10px 0;">
      <strong>... Span limit extended mid-trace ...</strong>
    </div>
  {{^}}
    <div class="indent1 left-numeric-column" style="width: {{offsetColumnWidth}}em;">
      +{{nanosToMillis offset}}
    </div>
    {{! +1 at the beginning is for the indent1 of the offset column }}
    <div style="margin-left: {{spanIndent .}}em;">
      {{#if beyondLimit}}
      {{^}}
        <div class="indent1 left-numeric-column" style="width: {{offsetColumnWidth}}em;">
          {{nanosToMillis duration}}{{#if active}}..{{/if}}
        </div>
      {{/if}}
      <div style="margin-left: {{addIndent2 offsetColumnWidth}}em;">
        {{#if message}}
          {{#ifLongMessage message.text}}
            <span class="inline-block unexpanded-content">{{firstPart message.text}}
              <span class="informant-red"><strong>...</strong></span> {{lastPart message.text}}
            </span>
            <div class="expanded-content break-word hide">{{message.text}}</div>
          {{^}}
            <div class="content-padding">{{message.text}}</div>
          {{/ifLongMessage}}
          {{#if message.detail}}
            <div class="content-detail">
              <span class="inline-block unexpanded-content informant-red">detail</span>
              <div class="expanded-content hide">{{{messageDetailHtml message.detail}}}</div>
            </div>
          {{/if}}
        {{/if}}
        {{#if error}}
          <div class="{{{errorIndentClass message}}}">
            <strong><span class="inline-block content-padding">{{error.text}}</span></strong>
            <br>
            {{#if error.detail}}
              <div class="content-detail">{{{messageDetailHtml error.detail}}}</div>
            {{/if}}
            {{#if error.exception}}
              <div class="{{{exceptionIndentClass message}}}">
                <span class="inline-block unexpanded-content informant-red">exception</span>
                {{! using span so background will stretch beyond page border if needed }}
                <span class="inline-block expanded-content nowrap hide">
                  {{{exceptionHtml error.exception}}}
                </span>
              </div>
            {{/if}}
          </div>
        {{/if}}
        {{#if stackTrace}}
          <div class="indent2">
            <span class="inline-block unexpanded-content informant-red">span stack trace</span>
            {{! using span so background will stretch beyond page border if needed }}
            <span class="inline-block expanded-content nowrap hide">{{{stackTraceHtml stackTrace}}}</span>
          </div>
        {{/if}}
      </div>
    </div>
  {{/if}}
{{/if}}
