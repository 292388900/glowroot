<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <groupId>org.informantproject.shaded</groupId>
  <artifactId>shaded-aspectjweaver</artifactId>
  <version>1.6.11-SNAPSHOT</version>

  <name>Shaded AspectJ Weaver</name>
  <description>Shaded AspectJ Weaver</description>

  <dependencies>
    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjweaver</artifactId>
      <version>1.6.11</version>
    </dependency>
  </dependencies>

  <pluginRepositories>
    <pluginRepository>
      <!--
        apache snapshot repository is needed for the latest build of maven-shade-plugin
        which contains the fix for http://jira.codehaus.org/browse/MSHADE-104
      -->
      <id>apache.snapshots</id>
      <name>Apache Snapshot Repository</name>
      <url>https://repository.apache.org/content/groups/snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.6-SNAPSHOT</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <createSourcesJar>true</createSourcesJar>
          <filters>
            <filter>
              <artifact>org.aspectj:aspectjweaver</artifact>
              <excludes>
                <!-- this directory is no longer present in 1.6.12 -->
                <exclude>testdata/**</exclude>
              </excludes>
            </filter>
          </filters>
          <relocations>
            <relocation>
              <pattern>org.aspectj</pattern>
              <shadedPattern>org.informantproject.shaded.aspectj</shadedPattern>
            </relocation>
            <relocation>
              <pattern>aj.org.objectweb.asm</pattern>
              <shadedPattern>org.informantproject.shaded.aspectj.org.objectweb.asm</shadedPattern>
            </relocation>
            <relocation>
              <!--
                Need to shade these additional raw strings

                org.aspectj.weaver.loadtime.definition.DocumentParser : "/aspectj_1_5_0.dtd"

                (this also takes care of the relocation of the resource file)
              -->
              <rawString>true</rawString>
              <pattern>^(/)?aspectj_1_5_0.dtd$</pattern>
              <shadedPattern>$1org/informantproject/shaded/aspectj/aspectj_1_5_0.dtd</shadedPattern>
            </relocation>
            <relocation>
              <!--
                Need to shade these additional raw strings

                org.aspectj.asm.internal.JDTLikeHandleProvider : "Lorg/aspectj/lang"
                org.aspectj.weaver.bcel.AtAjAttributes : "Lorg/aspectj/lang/annotation"
                org.aspectj.weaver.patterns.ArgsPointcut : "Lorg/aspectj/runtime/internal/"
                org.aspectj.weaver.bcel.BcelShadow : "(I)Lorg/aspectj/lang/ProceedingJoinPoint;"
              -->
              <rawString>true</rawString>
              <pattern>Lorg/aspectj/</pattern>
              <shadedPattern>Lorg/informantproject/shaded/aspectj/</shadedPattern>
            </relocation>
            <relocation>
              <!--
                Need to shade these additional raw strings

                org.aspectj.bridge.Constants : "META-INF/aop.xml"
                org.aspectj.bridge.Constants : "META-INF/aop-ajc.xml"
              -->
              <rawString>true</rawString>
              <pattern>^META-INF/aop(-ajc)?.xml$</pattern>
              <shadedPattern>META-INF/org.informantproject.aop$1.xml</shadedPattern>
            </relocation>
            <relocation>
              <!--
                Need to shade this additional raw string

                org.aspectj.weaver.loadtime.ClassLoaderWeavingAdaptor
                : "META-INF/aop.xml;META-INF/aop-ajc.xml;org/aspectj/aop.xml"
              -->
              <rawString>true</rawString>
              <pattern>^META-INF/aop.xml;META-INF/aop-ajc.xml;org/aspectj/aop.xml$</pattern>
              <shadedPattern>META-INF/org.informantproject.aop.xml;META-INF/org.informantproject.aop-ajc.xml;org/informantproject/shaded/aspectj/aop.xml</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
